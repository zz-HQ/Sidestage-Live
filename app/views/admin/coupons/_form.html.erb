<%= form_for [:admin, resource] do |f| %>
    
    <%= error_messages_for resource %>

    <div class="form-group">
        <%= f.label :code %>
        <%= f.text_field :code, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :amount %>
        <%= f.text_field :amount, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= f.label :expires_at %><br>
        <%= f.date_select :expires_at, start_year: Time.now.year, include_blank: true, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= f.label :currency %>
        <%= f.select :currency, Currency.all.collect{|c| [c.name, c.name]}, {}, class: "form-control" %>
    </div>
    
    <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: "form-control" %>
    </div>
    
    <%= f.submit class: "btn btn-default" %>
<% end %>