<!DOCTYPE html>
<html>
	<%= render "head" %>
	<body>
		<div>
			<%= link_to "Home", root_path %>
			|
			<%= link_to "Musicians", artists_path %>
			|
			<% if current_user %>
				<%= link_to "logout", destroy_user_session_path, method: :delete %>
				|
				<%= link_to "Profile", current_user.profiles.count>0 ? account_profile_path(current_user.profiles.first) : new_account_profile_path %>
				|
				<%= link_to "Conversations", account_conversations_path %>
			<% else %>	
				<%= link_to "Login", new_user_session_path %>
				|
				<%= link_to "Sign up", new_user_registration_path %>
			<% end %>

		</div>	

		<%= render 'flash' %>

		<%= yield %>

	</body>
</html>
