<%- if @success -%>
  
  $('#email-response-success').slideDown();
  $('#email-response-error').slideUp();

<%- else -%>

  <%- if @already_exists -%>
    $('#email-response-error').text("That email is already registered.")
  <%- else -%>
    $('#email-response-error').text("Hm. That email ain't right.")
  <%- end -%>

  $('#email-response-error').slideDown();
  $('#email-response-success').slideUp();

<%- end -%>
