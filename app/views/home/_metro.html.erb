<section class="metro">
	<a name="staffpicks"></a>
	<div class="wrap">
		<h2><%= t(:"application.home.index.featured_html") %></h2>

		<section class="results">
			<%= link_to artist_path(@profiles.first), class: "metro large" do %>
				<%= render "artists/metro_artist", artist: @profiles.first %>
			<% end %>

			<% @profiles[1..2].each do |profile| %>
				<%= link_to artist_path(profile), class: "metro" do %>
					<%= render "artists/metro_artist", artist: profile %>
				<% end %>
			<% end %>

			<section id="newsletter" class="metro large omega">
		        <h2><%= t(:"application.home.index.newsletter") %></h2>
		        <a name="newsletter"></a>
		        
		        <%= render "mailchimp_subscription" %>

		        <% if false %>
		          <h4 class="light">Questions? Get in touch with our Customer Service team, <a class="light" href="mailto:bookings@sidestage.com">bookings@sidestage.com</a>.</h4>
		        <% end %>
		    </section>

		    <% @profiles[3..5].each do |profile| %>
				<%= link_to artist_path(profile), class: "metro" do %>
					<%= render "artists/metro_artist", artist: profile %>
				<% end %>
			<% end %>


			<!-- ______________________________ SPÃ„TER -->
			<% if false %>
    			<%= link_to artist_path(@profiles[6]), class: "metro large" do %>
    				<%= render "artists/metro_artist", artist: @profiles[6] %>
    			<% end %>

    			<%= link_to artist_path(@profiles[7]), class: "metro" do %>
    				<%= render "artists/metro_artist", artist: @profiles[7] %>
    			<% end %>
			<% end %>

		</section>

	</div>

</section>