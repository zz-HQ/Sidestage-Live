<% if @profile.present? && @coupon.present? %>
    $("#coupon_price").html("<%= localized_price(@coupon.profile_price(@profile).with_surcharge, @profile.currency) %>");
    $("#coupon_price").show();
    $("#coupon_id").val(<%= @coupon.id %>);
    $("#original_price").hide();
    $("#coupon_failure").hide();
    $("#coupon_success").show();
<% else %>
    $("#coupon_price").hide();
    $("#original_price").show();
    $("#coupon_success").hide();
    $("#coupon_failure").show();
<% end %>