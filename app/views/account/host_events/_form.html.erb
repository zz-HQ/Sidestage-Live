<div class="step-1">
	<div class="date">
		<%= f.input :event_at, as: :string, input_html: { class: "date-picker" }, label: false, placeholder: "Choose date" %>
		<i class="fa fa-calendar"></i>
	</div>
	<%= nice_select((f.select :event_time, options_for_select(express_time, f.object.event_time)), id: "event_time") %>
	<%= nice_select((f.select :genre, options_for_select(express_genre, f.object.genre)), id: "genre") %>
</div>
<%= render "account/deals/coupon_form", f: f, action: apply_on_event_account_coupons_path %>
<%#= f.input :postal_code, placeholder: "Zip code", maxlength: "5", pattern: "[0-9]*", label: false %>
<div class="btns">
	<input type="submit" value="Go to last step" class="btn btn-inline">
</div>
<%= f.input :booking_for, as: :hidden, label: false %>