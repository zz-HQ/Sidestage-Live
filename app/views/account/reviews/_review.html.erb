<div class="review">
  <div class="photo">
    <%= image_tag review.author.avatar_url(:thumb) %>
  </div>
  <div class="body">
    <div class="dreieck"></div>
    <p><%= review.body %></p>

    <p>
      -- <%= review.author.name.split(' ').first %>, <%= l review.created_at, format: :review %>

      <span class="star-rating">
        <%- review.rate.to_i.times do |a| -%>
          <i class="fa fa-star rating-star rating-on"></i>
        <%- end -%>
        <%- (5 - review.rate.to_i).times do |a| -%>
          <i class="fa fa-star rating-star rating-off"></i>
        <%- end -%>
      </span>
    </p>
  </div>
</div>