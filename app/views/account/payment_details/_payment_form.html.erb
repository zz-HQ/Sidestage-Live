<% unless current_user.paymentable? %>
<div class="payment-inputs">
	<h4>{Please enter your payment information}</h4>
	<div class="payment-status" style="display:none;"><%= t(:"application.deals.new.verification_message") %></div>
	<div class="payment-errors" style="display:none;"></div>
	<%= text_field_tag nil, nil, data: { stripe: :number }, placeholder: "#{t(:"simple_form.placeholders.credit_card.number")}", label: false, class: "paymentInput" %>	
	<%= nice_select(select_tag nil, options_for_select(1..12), data: { stripe: :exp_month }, prompt: "#{t(:"simple_form.placeholders.credit_card.exp_month")}") %>
	<%= nice_select(select_tag nil, options_for_select(Time.now.year..10.years.from_now.year), data: { stripe: :exp_year }, prompt: "#{t(:"simple_form.placeholders.credit_card.exp_year")}") %>
	<%#= text_field_tag nil, nil, id: "cc-exp", placeholder: "MM / YY", required: "required", label: false, class: "paymentInput cc-exp" %>
</div>
<% end %>
