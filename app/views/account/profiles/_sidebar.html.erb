<aside class="menu" id="wizard_steps">
	<div class="sidebar">
		<h4>
			<%= link_to t(:"application.profiles.sidebar.settings_link").html_safe, style_account_profile_path, class: ('active' if action_name == 'basics') %>
			<%= profile_wizard_progress_icon(:style) %>
		</h4>
		<h4>
			<%= link_to t(:"application.profiles.sidebar.location_link").html_safe, geo_account_profile_path, class: ('active' if action_name == 'location') %>
			<%= profile_wizard_progress_icon(:geo) %>
		</h4>
		<h4>
			<%= link_to t(:"application.profiles.sidebar.pricing_link"), pricing_account_profile_path, class: ('active' if action_name == 'pricing') %>
			<%= profile_wizard_progress_icon(:pricing) %>
		</h4>
		<h4>
			<%= link_to t(:"application.profiles.sidebar.description_link").html_safe, description_account_profile_path, class: ('active' if action_name == 'description') %>
			<%= profile_wizard_progress_icon(:description) %>
		</h4>
		<h4>
			<%= link_to t(:"application.profiles.sidebar.avatar_link"), avatar_account_profile_path, class: ('active' if action_name == 'avatar') %>
			<%= profile_wizard_progress_icon(:avatar) %>
		</h4>
		<h4>
			<%= link_to t(:"application.profiles.sidebar.photos_link"), account_profile_pictures_path, class: ('active' if controller.controller_name == 'pictures') %>
			<%= profile_wizard_progress_icon(:pictures) %>
		</h4>
		<h4>
			<%= link_to t(:"application.profiles.sidebar.audio_video_link"), music_account_profile_path, class: ('active' if controller.controller_name == 'music') %>
			<%= profile_wizard_progress_icon(:music) %>
		</h4>

		<div class="publish-btn">
		    <% if @profile.wizard_complete? %>
		        <%= link_to t(:"application.links.publish.toggle_#{resource.published?}"), toggle_account_profile_path, method: :put, class: "btn btn-publish" %>
		    <% else %>
		        <div class="missing"><%= t(:"application.profiles.sidebar.completion_hint", count: @profile.remaining_wizard_steps_count) %></div>
		    <% end %>
			<% if false %>
				<div class="third">
					<div class="published-circle"></div>
					<%= nice_select(select_tag :artist) %>
				</div>
			<% end %>
		</div>


		<% if false %>
		<h4>
			<%= link_to t(:"application.profiles.sidebar.preview_link"), preview_account_profile_path %>
			<%= image_tag "icons/check_icon.png" %>
		</h4>

		<h4>
			<%= link_to t(:"application.personals.sidebar.phone_link"), account_mobile_numbers_path %>
			<%= image_tag "icons/check_icon.png" %>
		</h4>
		<% end %>
	</div>
</aside>