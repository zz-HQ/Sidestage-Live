<nav class="tabs" data-id="social">
    <div class="tab-switch"><%= Profile.human_attribute_name(:soundcloud) %></div>
    <div class="tab-switch"><%= Profile.human_attribute_name(:youtube) %></div>
    <div class="tab-switch"><%= Profile.human_attribute_name(:photos) %></div>
</nav>

<div class="tabs" data-id="social">
  <div class="tab">
    <% if resource.has_soundcloud? %>
      <%= soundcloud_widget %>
      <%= link_to t(:"application.links.remove"), remove_soundcloud_account_profile_path(resource), method: :put, class: "delete" %>
    <% else %>
      <div class="media-type-form">
        <p><strong><%= t(:"application.profiles.preview.soundcloud.title") %></strong></p>
        <span class="open-input-field"><%= t(:"simple_form.placeholders.profile.soundcloud") %></span>

        <%= link_to "What's this?", "#", class: "link", data: { lightbox: :html, target: "[data-container='help-sc']" } %>
        <div style="display:none;" data-container="help-sc">
          <div class="devise-lightbox">
            <h2>How to copy and paste SoundCloud Embed code into your Sidestage profile</h2>
            <%= image_tag 'sc-embed-help.png' %>
          </div>
        </div>
      </div>
      <div class="media-type-input-field">
        <%= simple_form_for resource, url: soundcloud_account_profile_path(resource) do |f| %>
          <%= f.input :soundcloud, hint: false, placeholder: "Copy and paste the SoundCloud Embed code here.", label: false %>
          <%= f.submit class: "btn btn-center btn-blue" %>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="tab">
    <% if resource.has_youtube? %>
      <%= youtube_widget %>
      <%= link_to t(:"application.links.remove"), remove_youtube_account_profile_path(resource), method: :put, class: "delete" %>
    <% else %>
      <div class="media-type-form">
        <p><strong><%= t(:"application.profiles.preview.youtube.title") %></strong></p>
        <span class="open-input-field"><%= t(:"simple_form.placeholders.profile.youtube") %></span>
      </div>
      <div class="media-type-input-field">
        <%= simple_form_for resource, url: youtube_account_profile_path(resource) do |f| %>
          <%= f.input :youtube, hint: false, placeholder: "Copy and paste the Youtube link here.", label: false %>
          <%= f.submit class: "btn btn-center btn-blue" %>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="tab">
    <div class="picture-viewer">
      <div class="thumbs">
        <% resource.pictures.latest.each do |pic| %>
          <div id="<%= dom_id(pic) %>" class="thumb" data-review="<%= pic.picture.url(:preview) %>">
            <%= image_tag pic.picture.url(:thumb) %>
            <%= link_to "<i class='fa fa-trash-o'></i>".html_safe, account_profile_picture_path(pic.imageable, pic), method: :delete, data: {remote: true, confirm: "#{t(:"helpers.confirm.sure")}"}, class: 'delete' %>
          </div>
        <% end %>

        <div class="thumb add-photo-btn"><span id="fileupload-button">+</span></div>
        <%= form_tag(account_profile_pictures_path(resource), multipart: true, id: "new_picture", method: :post) do %>
          <%= file_field_tag 'file', accept: 'image/png,image/gif,image/jpeg', multiple: true %>
        <% end %>
        <div id="file-upload-status" class="thumb"><div class="loader"></div> <span class="value">0</span> left</div>
      </div>
      <div class="picture">
        <img>
      </div>
    </div>
  </div>

</div>