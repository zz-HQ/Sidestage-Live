<div data-lightbox="auto"  style="display:none;">
    <div class="devise-lightbox center">
        <p><strong><%= t(:"application.profiles.preview.share_modal.title") %></strong></p>
        <p><%= t(:"application.profiles.preview.share_modal.desc") %></p>
        <div class="btns">
            <%= link_to t(:"application.profiles.preview.share_modal.share_on_fb"), "http://www.facebook.com/sharer/sharer.php?u=#{artist_url(@profile)}", class: "btn btn-facebook btn-inline" %>
            <%= link_to t(:"application.profiles.preview.share_modal.share_on_twitter"), "https://twitter.com/intent/tweet?url=#{artist_url(@profile)}", class: "link" %>
        </div>
    </div>
</div>

<script>
  jQuery(document).ready(function(){
      $('[data-lightbox="auto"]').each(function(i, e) {
        return vex.open({
          content: $(e).html()
        });
      });
  })
</script>