<% if false %>

<div id="profile" class="container edit-profile">
  <%= render 'sidebar' %>

  <div id="location" class="content">
    <header><%= t(:"application.profiles.location.title_html") %></header>

    <div class="left-side">
      <p class="desc"><%= t(:"application.profiles.location.desc") %></p>
      <p class="light"><%= t(:"application.profiles.location.hint") %></p>
    </div>
    <div class="right-side location-input">
      <%= simple_form_for resource, url: basics_account_profile_path do |f| %>
        <label><%= t(:"application.profiles.location.label") %></label>
        <%= f.input :location, as: :string, label: false, placeholder: t(:"simple_form.placeholders.profile.location") %>
        <%= f.input :latitude, as: :hidden %>
        <%= f.input :longitude, as: :hidden %>
        <%= f.input :country_short, as: :hidden %>
        <%= f.input :country_long, as: :hidden %>

        <%= render "submit", f: f %>
      <% end %>
    </div>
  </div>
  <aside class="hints">
    <header><%= t(:"application.profiles.sidebar.tips_hints") %></header>
    <%= t(:"application.profiles.location.tips_hints_html") %>
  </aside>
</div>    
<% end %>