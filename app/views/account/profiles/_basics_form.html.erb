<div class="input">
	<label>You are..</label>
	<div class="styled-radios">
		<div class="act radio">
			<div class="label">Solo Artist</div>
			<%= f.radio_button :solo, true %>
		</div>
		<div class="act radio">
			<div class="label">Band</div>
			<%= f.radio_button :solo, false %>
		</div>
	</div>
</div>  

<div class="genres">
	<%= render "genres", f: f %>
</div>

<div class="input city last">
	<label>Where are you based?</label>
	<%= nice_select(f.select :location, available_locations, include_blank: false) %>
</div>

<div class="input last">
	<%= f.button :submit, value: "Continue", class: "btn" %>
</div>