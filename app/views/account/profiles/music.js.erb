<% if Profile::WIZARD_SUB_STEPS.include?(resource.wizard_sub_step) %>
    <% if resource.wizard_sub_step == :soundcloud && resource.has_soundcloud? %>
        $("[data-container=soundcloud]").html("<%= j(render("soundcloud_widget")) %>")
    <% elsif resource.wizard_sub_step == :youtube && resource.has_youtube? %>
        $("[data-container=youtube]").html("<%= j(render("youtube_widget")) %>")
    <% else %>
        $("#<%= resource.wizard_sub_step.to_s %>_form").replaceWith("<%= j(render("account/profiles/#{resource.wizard_sub_step}_form")) %>")
    <% end %>
<% end %>
<%= render "update" %>