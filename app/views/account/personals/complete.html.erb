<div id="personals" class="container">
    
	<%= render "sidebar" %>

  <div class="content">
      <header>{Profile picture}<p>Please add a profile picture. It helps us build trust in our community.</p></header>

			<%= simple_form_for resource, url: upload_avatar_account_personal_path, html: { id: "user_account", multipart: true } do |f| %>
				<label>Profile picture</label>
				<div class="avatar-uploader">
					<div id="avatar" class="avatar avatar-upload-button">
						<%= render 'avatar' %>
					</div>
				</div>

				<div class="new-avatar" style="display:none;">
					<%= f.input :avatar, label: false, id: "avatar-file" %>
				</div>
			<% end %>
  </div>
</div>
