<div id="personals" class="container">
    
  <%= render "sidebar" %>

  <div class="content">
    <header>Payments details</header>
    <% if current_user.paymentable? %>
      One credit cared on file: <br> <br>
      <%= current_user.credit_type %>
      <br/>
      Card number: **** **** **** <%= current_user.credit_last4 %>
      <br/>
      Expiration: <%= "#{current_user.credit_exp_month} #{current_user.credit_exp_year}" %>
      
    <% else %>
        You have no credit card on file. Add one below.
      <div data-content="payment-form">
        <%= simple_form_for resource, url: payment_account_personal_path, data: { form: "payment" } do |f| %>
          <%= f.input :stripe_token, as: :hidden %>
          <%= render "account/payment_details/payment_form" %>
          <%= f.button :submit, value: "Update", class: "btn" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>