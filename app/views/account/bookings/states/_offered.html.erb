<% if deal.is_customer?(current_user) %>
  <p><%= link_to "Accept", confirm_account_deal_path(deal), method: :put, class: "btn btn-confirm" %></p>
  <p><%= link_to "Cancel", cancel_account_deal_path(deal), method: :put, class: "link" %></p>
<% else %>
    <%= link_to "Decline", decline_account_deal_path(deal), method: :put, class: "link" %>
<% end %>
