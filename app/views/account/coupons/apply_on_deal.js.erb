<% if @deal.present? %>
    <% if @coupon.present? %>
        $("#<%= dom_id(@deal) %> [data-coupon=coupon_price]").html("<%= localized_price(@deal.price_for_customer, @deal.currency) %>");
        $("#<%= dom_id(@deal) %> [data-coupon=coupon_price]").show();
        $("#<%= dom_id(@deal) %> [data-coupon=original_price]").hide();
        $("#<%= dom_id(@deal) %> [data-coupon=failure]").hide();
        $("#<%= dom_id(@deal) %> [data-coupon=success]").show();
    <% else %>
        $("#<%= dom_id(@deal) %> [data-coupon=coupon_price]").hide();
        $("#<%= dom_id(@deal) %> [data-coupon=original_price]").show();
        $("#<%= dom_id(@deal) %> [data-coupon=success]").hide();
        $("#<%= dom_id(@deal) %> [data-coupon=failure]").show();
    <% end %>
<% end %>