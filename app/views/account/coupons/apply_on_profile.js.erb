<% if @profile.present? && @coupon.present? %>
    $("form#deal-request [data-coupon=coupon_price]").html("<%= localized_price(@coupon.surcharged_profile_price(@profile), @profile.currency) %>");
    $("form#deal-request [data-coupon=original_price]").hide();
    $("form#deal-request [data-coupon=coupon_price]").show();
    $("form#deal-request [data-coupon=id]").val(<%= @coupon.id %>);
    $("form#deal-request [data-coupon=failure]").hide();
    $("form#deal-request [data-coupon=success]").show();
<% else %>
    $("form#deal-request [data-coupon=id]").val("");
    $("form#deal-request [data-coupon=coupon_price]").hide();    
    $("form#deal-request [data-coupon=original_price]").show();
    $("form#deal-request [data-coupon=success]").hide();
    $("form#deal-request [data-coupon=failure]").show();
<% end %>