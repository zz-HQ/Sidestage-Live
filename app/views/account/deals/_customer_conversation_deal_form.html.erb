<%= simple_form_for resource, url: account_deals_path, remote: true, html: { id: 'quick-deal-request' } do |f| %>
    <%= f.input :profile_id, as: :hidden %>
	<div class="form-inputs">
		<div class="date">
			<%= f.input :start_at, as: :string, input_html: { class: "date-picker" }, label: false %>
			<i class="fa fa-calendar"></i>
		</div>
		<p class="title"><%= t(:"application.conversations.deals.new.total_price") %>: <%= localized_price(resource.price.with_surcharge, resource.currency) %></p>
    <div class="btns">
    	<%= f.submit class: "btn btn-full" %>
    </div>
    </div>
<% end %>
