vex.closeAll();
<% if resource.errors.present? %>
    vex.closeAll();
    vex.open({ content: "<%= j render("form").strip.html_safe %>" });
<% else %>
    vex.dialog.alert('Your booking request has been sent to <%= resource.artist.name %> for approval. Your credit card will not be billed until your booking is confirmed');
<% end %>