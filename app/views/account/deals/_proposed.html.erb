<div class="booking">
  <table>
    <tr>
      <td><%= Deal.human_attribute_name(:start_at) %>:</td><td data-deal="start-at"><%= l(deal.start_at, format: :event_date) %></td>
     </tr>
     <tr class="price">
         <% if deal.is_customer?(current_user) %>
            <td><%= Deal.human_attribute_name(:price) %>:</td><td><%= localized_price(deal.price_with_surcharge, deal.currency) %></td>
         <% else %>
            <td><%= t(:"application.deals.show.you_will_earn") %>:</td><td><%= localized_price(deal.price, deal.currency) %></td>
        <% end %>    
     </tr>
     </table>      
     <hr>
     <% if deal.is_customer?(current_user) %>
         <p><%= link_to t(:"application.deals.show.accept"), confirm_account_deal_path(deal), method: :put, class: "btn btn-confirm" %></p>
         <p><%= link_to t(:"application.deals.show.cancel_proposal"), cancel_account_deal_path(deal), method: :put, class: "link" %></p>
     <% else %>
        <%= link_to t(:"application.deals.show.cancel"), decline_account_deal_path(deal), method: :put, class: "link" %>
     <% end %>
</div>
