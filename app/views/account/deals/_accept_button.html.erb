<% if current_user.paymentable? %>
    <p><%= link_to t(:"application.deals.show.accept"), confirm_account_deal_path(deal), method: :put, class: "btn" %></p>
<% else %>
    <p><%= link_to t(:"application.deals.show.accept"), "#", class: "btn", data: { lightbox: :html, target: "[data-container='credit-card-form']" } %></p>
    <div data-container="credit-card-form" style="display:none;">
        <div class="devise-lightbox">
        	<div class="payment-form">
                <h3><%= t(:"application.personals.payment_details.title") %></h3>
                <p class="subtitle"><%= t(:"application.personals.payment_details.new.title") %></p>
                <div data-content="payment-form" id="payment" class="payment-form">
                    <%= simple_form_for current_user, url: payment_details_account_personal_path, data: { form: "payment" } do |f| %>
    	                <%= hidden_field_tag :return_to, value: request.path %>
                        <%= render partial: "account/payment_details/payment_form", locals: { f: f } %>
                        <div class="btns">
                            <%= f.submit value: t(:"helpers.submit.credit_card.submit"), class: "btn" %>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
<% end %>
