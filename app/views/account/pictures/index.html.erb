<div id="edit-pictures" class="container">
  <aside>
    <%= render 'account/profiles/sidebar', resource: current_user.profile %>
  </aside>

  <div class="content">
    <header><%= t(:"application.profiles.pictures.index.title_html") %></header>
    
    <div id="picture-upload" class="picture-upload">
        <%= form_tag(account_profile_pictures_path, multipart: true, id: "new_picture", method: :post) do %>
            <div data-upload="trigger" style="display:none;">
                <%= file_field_tag 'file', accept: 'image/png,image/gif,image/jpeg', multiple: true %>
            </div>
              
            <span data-upload="button" id="fileupload-button" class="btn btn-blue btn-inline">Add photos</span>
        <% end %>
      <div id="file-upload-status" style="display:none;"><div class="value" style=""></div></div>
    </div>

    <div id="pictures" class="pictures">
        <% if collection.present? %>
          <%= render collection %>
        <% else %>
          <p id="no-pictures" class="light"><%= t(:"application.profiles.pictures.index.empty") %></p>
        <% end %>
    </div>

    <aside class="hint">
      <p><strong>Add photos:</strong></p> <br/>
      <p>Users browse photos to quickly get a feel for you and your musical act. Be sure to put your best photo first.</p>
    </aside>

  </div>
</div>
