<div id="profile" class="container">

    <aside>
        <div class="sidebar"></div>
    </aside>

  <div class="content description">
    <header><%= t(:"application.profiles.description.title_html") %></header>
    <div id="description" class="">
      <%= simple_form_for resource.user, url: upload_avatar_account_personal_path, html: { id: "user_account", multipart: true } do |f| %>
        <label><%= t(:"simple_form.labels.user.avatar") %></label>
        <div class="avatar-uploader">
          <div id="avatar" class="avatar avatar-upload-button">
            <%= render 'avatar' %>
          </div>
        </div>

        <div class="new-avatar" style="display:none;">
          <%= f.input :avatar, label: false, id: "avatar-file" %>
        </div>
      <% end %>

      <%= simple_form_for resource, url: description_account_profile_completion_path do |f| %>
        <%= render "account/profiles/description_form", f: f %>
      <% end %>
    </div>
  </div>

</div>
    
