<div class="wrap">
  <div class="devise">
    <h2><%= t(:"application.devise.passwords.edit.title") %></h2>
    
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <%= f.input :reset_password_token, as: :hidden %>
      <%= f.full_error :reset_password_token %>

      <div class="form-inputs">
        <%= f.input :password, placeholder: "New password", input_html: { autocomplete: "off" }, required: true, autofocus: true, label: false %>
        <%= f.input :password_confirmation, placeholder: "Confirm your new password", input_html: { autocomplete: "off" }, required: true, label: false %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, t(:"application.devise.passwords.edit.submit"), class: "btn" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
