<div class="wrap">
  <div class="devise">
    <h3>Reset Password</h3>
    <p>Enter the email address associated with your account, and we'll email you a link to reset your password</p><br>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email, required: true, autofocus: true, placeholder: "Email", label: false %>
      </div>

      <%= f.button :submit, "Send reset link", class: "btn btn-left" %>
    <% end %>

