<div class="wrap">
  <div class="devise">
    <h2>Reset Password</h2>
    <!-- <p>Enter the email address associated with your account, and we'll email you a link to reset your password</p><br> -->

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email, required: true, autofocus: true, placeholder: "Email", label: false %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Send reset link", class: "btn" %>
        <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "link" %>
      </div>
    <% end %>

  </div>
</div>
