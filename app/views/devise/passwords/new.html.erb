<div class="wrap">
  <div class="devise">
    <h2>Forgot your password?</h2>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email, required: true, autofocus: true, placeholder: "Email", label: false %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Send me reset password instructions", class: "btn" %>
      </div>
    <% end %>

    <div class="bottom-link">
      <span><%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), data: {lightbox: "ajax"} %></span><br>
      <span><%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), data: {lightbox: "ajax"} %></span>
    </div>

  </div>
</div>
