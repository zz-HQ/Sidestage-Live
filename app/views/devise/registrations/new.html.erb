<div class="devise-lightbox">
  <h2>Sign up</h2>

  <div class="facebook">
    <%= link_to "Log in with facebook", nil, class: "btn btn-facebook" %>

    <p>We post nothing without your permission!</p>
  </div>

  <div class="or">
    <div class="line"></div>
      <span>or</span>
    <div class="line"></div>      
  </div>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :first_name, required: true, autofocus: true, placeholder: "First Name", label: false %>
      <%= f.input :last_name, required: true, autofocus: true, placeholder: "Last Name", label: false %>
      <%= f.input :email, required: true, autofocus: true, placeholder: "Email", label: false %>
      <%= f.input :password, required: true, placeholder: "Password", label: false %>
      <%= f.input :password_confirmation, required: true, placeholder: "Password Confirmation", label: false %>
      <%= f.check_box :newsletter_subscribed %>Send me Sidestage updates
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign me up!", class: "btn" %>
    </div>
  <% end %>

  <div class="bottom-link">
    <span>Have an Account? <%= link_to "Log In", new_session_path(resource_name), data: {lightbox: "ajax"} %> </span>
  </div>
</div>
