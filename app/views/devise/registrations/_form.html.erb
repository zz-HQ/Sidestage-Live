<div class="devise-lightbox">
    <%= image_tag "sidestage_brand.png", alt: "Logo Brand", class: "logo_brand" %>

    <%= simple_form_for resource, :as => resource_name, :url => registration_path(resource_name) do |f| %>
        <% if resource.errors.present? %>
            <div class="error-notification">
                <%= t(:"errors.messages.invalid_signup") %>
            </div>
        <% end %>
        <div class="form-inputs">
            <%= f.input :full_name, required: true, error: false, autofocus: true, label: false %>
            <%= f.input :email, required: true, error: false, autofocus: true, label: false %>
            <%= f.input :password, required: true, error: false, input_html: { autocomplete: "off" }, label: false %>
        </div>

        <div class="form-actions">
            <%= f.check_box :newsletter_subscribed, default: true, checked: true %><%= t(:"simple_form.labels.user.newsletter_subscribed") %>
            <%= f.button :submit, value: t(:"helpers.submit.user.sign_up"), class: "btn", data: { disable_with: "Sending..." } %>
            <%= link_to t(:"application.devise.facebook_signup"), user_omniauth_authorize_path(:facebook), class: "btn btn-facebook" %>
        </div>
        <div class="footnote">
            <%= t(:"application.devise.sign_up_foot_note_html", terms_path: terms_path, privacy_path: privacy_path) %>
        </div>
    <% end %>

</div>
