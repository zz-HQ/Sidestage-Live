<div class="devise-lightbox">
  <div class="link-to-artist-profile">
    <%= link_to "If you're an artist, create an Artist Profile instead.", new_artist_path %>
  </div>

  <h2>Sign up</h2>

  <div class="facebook">
    <%= link_to "<i class='fa fa-facebook-square'></i> Log in with Facebook".html_safe, user_omniauth_authorize_path(:facebook), class: "btn btn-facebook" %>

    <p>We post nothing without your permission!</p>
  </div>

  <div class="or">
    <div class="line"></div>
      <span>or</span>
    <div class="line"></div>      
  </div>

  <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), remote: true, authenticity_token: true) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :first_name, required: true, autofocus: true, placeholder: "First Name", label: false %>
      <%= f.input :last_name, required: true, autofocus: true, placeholder: "Last Name", label: false %>
      <%= f.input :email, required: true, autofocus: true, placeholder: "Email", label: false %>
      <%= f.input :password, required: true, placeholder: "Password", input_html: { autocomplete: "off" }, label: false %>
      <%= f.input :password_confirmation, required: true, input_html: { autocomplete: "off" }, placeholder: "Password Confirmation", label: false %>
      <%= f.check_box :newsletter_subscribed, default: true, checked: true %>Send me Sidestage updates
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign me up!", class: "btn" %>
    </div>
    <div class="footnote">
      By signing up, you agree to our <br> <a href="<%= terms_path %>">terms</a> and <a href="<%= privacy_path %>">privacy policy</a>.
    </div>
  <% end %>

  <div class="bottom-link">
    <span>Have an account? <%= link_to "Log in", new_session_path(:user, format: "html"), data: {lightbox: "ajax"} %> </span>
  </div>
</div>
