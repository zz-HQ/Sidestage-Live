<p style="color: #4a4a4a; font-size: 18px; margin: 50px 4%; font-weight: 300; line-height: 1.45;">
    <% if @user.unconfirmed_email.present? %>
        <%= t(:"application.devise.mailer.confirmation_instructions.update_desc") %>
    <% else %>
        <%= t(:"application.devise.mailer.confirmation_instructions.desc_html", name: @user.name.split(' ').first) %>
    <% end %>
</p>
<%= link_to t(:"application.devise.mailer.confirmation_instructions.confirm"), confirmation_url(@resource, confirmation_token: @token), style: "padding: 20px 25px 18px; background: #3e8ae5; color: #fff; font-weight: 600; margin-bottom: 30px; font-size: 16px; border-radius: 4px; display: inline-block; text-decoration: none;" %>
