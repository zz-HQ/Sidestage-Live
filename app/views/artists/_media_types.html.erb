<% if action_name == 'preview' %>

  <nav class="tabs" data-id="social">
    <div class="tab-switch">SoundCloud</div>
    <div class="tab-switch">Youtube</div>
    <div class="tab-switch">Photos</div>
  </nav>
  <div class="tabs" data-id="social">
    <div class="tab">
      <% if resource.has_soundcloud? %>
        <%= soundcloud_widget %>
      <% else %>
        <div class="media-type-form">
          <p><strong>Add a SoundCloud track to your profile.</strong></p>

          <input type="text" placeholder="Click here to paste SoundCloud 'Embed' code">

          <%= link_to "What's this?", "#", class: "link", data: { lightbox: :html, target: "[data-container='help-sc']" } %>

          <div style="display:none;" data-container="help-sc">
            <div class="devise-lightbox">
              <h2>How to copy and paste SoundCloud Embed code into your Sidestage profile</h2>

              <img src="<%= asset_path('sc-embed-help.png') %>">
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="tab">
      <% if resource.has_youtube? %>
        <%= youtube_widget %>
      <% else %>
        <div class="media-type-form">
          <p><strong>Add a YouTube track to your profile.</strong></p>

          <input type="text" placeholder="Click here to paste YouTube 'Embed' code">
        </div>
      <% end %>
    </div>
    <% if resource.has_pictures? %>
      <div class="tab">
        <div class="picture-viewer">
          <div class="thumbs">
            <% resource.pictures.each do |pic| %>
              <div class="thumb" data-big-picture="<%= pic.picture.url(:preview) %>">
                <%= image_tag pic.picture.url(:thumb) %>
              </div>
            <% end %>
          </div>
          <div class="picture">
            <img>
          </div>
        </div>
      </div>
    <% end %>
  </div>

<% else %>

<nav class="tabs" data-id="social">
  <%- if resource.has_soundcloud? -%>
  <div class="tab-switch">SoundCloud</div>
  <%- end -%>
  <%- if resource.has_youtube? -%>
  <div class="tab-switch">Youtube</div>
  <%- end -%>
  <% if resource.has_pictures? %>
  <div class="tab-switch">Photos</div>
  <% end %>
</nav>
<div class="tabs" data-id="social">
  <%- if resource.has_soundcloud? -%>
  <div class="tab">
    <%# TODO: Load Soundcloud async if possible %>
    <%= soundcloud_widget %>
  </div>
  <%- end -%>
  <% if resource.has_youtube? %>
  <div class="tab">
    <%# TODO: Load Youtube async if possible %>
    <%= youtube_widget %>
  </div>
  <%- end -%>

  <% if resource.has_pictures? %>
  <div class="tab">
    <div class="picture-viewer">
      <div class="thumbs">
        <%- resource.pictures.each do |pic| -%>
          <div class="thumb" data-big-picture="<%= pic.picture.url(:preview) %>">
            <%= image_tag pic.picture.url(:thumb) %>
          </div>
        <%- end -%>
      </div>
      <div class="picture">
        <img>
      </div>
    </div>
  </div>
  <% end %>
</div>

<% end %>