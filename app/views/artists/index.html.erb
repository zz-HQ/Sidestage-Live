<% @meta_title = "Sidestage - Artists in #{@location}" %>
<%# @meta_desc = @social_desc = "Checkout Sidestage's #{@location} artists profiles and book the perfect live musicians or Dj for your next party." %>




<div id="artists">

  <div class="content">
    <header>
      <div class="results-order">
        <%= sorty :name, class: "active" %>
        <%= sorty :price, label: "Price" %>
      </div>
    </header>
    
    <div class="results">
      <%= render partial: 'artists/artist', collection: collection %>  
    </div>
    <p class="center light">Looking for something special? <%= link_to "Tell us more, and we'll match you", match_mes_path %> with the perfect musician for your event.</p>
  </div>

</div>

<%= content_for :olark do %>
    <%= render "olark" %>
<% end %>