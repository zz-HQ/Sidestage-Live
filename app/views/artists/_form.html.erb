
	<div id="new-profile" class="new-profile-form">

		<!-- # resource.errors.full_messages.inspect -->
		<%= simple_form_for resource, url: artists_path, remote: true do |f| %>

			<header>
				<h2>List your Music!</h2>
				<p>Integer posuere erat a ante venenatis dapibus posuere velit aliquet. Maecenas faucibus mollis interdum. Donec sed odio dui. Nullam quis risus eget urna mollis ornare vel eu leo.</p>
			</header>
			
			<div class="input">
				<h3>How big is your Act?</h3>
				
				<div class="styled-radios">
					<div class="act radio">
						
						<div class="photo"></div>
						<div class="label">
							Solo Artist
						</div>
						<%= f.radio_button :solo, true %>
					</div>
					<div class="act radio">
						
						<div class="photo"></div>
						<div class="label">
							Band
						</div>
						<%= f.radio_button :solo, false %>
					</div>
				</div>

			</div>

            <%= render "/account/profiles/genres", f: f %>
            
			<div class="input city">
				<h3>Where do you live?</h3>

				<div id="city-switch">
		            <%= nice_select(f.select :location, available_locations, include_blank: false) %>
		        </div>
			</div>

    		<div class="input last">
    		    <input type="submit" value="Continue" class="btn button gross">
    		</div>

		<% end %>

	</div>
