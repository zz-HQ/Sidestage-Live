<div class="photo" style="background-image: url(<%= artist.user.avatar_url(large ? :big : :large) %>);">
	<div class="overlay">
		<div class="text">
			<h3><%= artist.name %></h3>
			<p class="location"><i class="fa fa-map-marker"></i> <%= artist.location %></p>
			<p class="price"><i class="fa fa-money"></i> <%= t(:"application.artists.index.price_from") %> <%= artist_price(artist) %></p>
		</div>
	</div>
</div>