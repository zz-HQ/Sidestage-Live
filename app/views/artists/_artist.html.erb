<%= content_tag :a, href: artist_path(artist, params), class: "artist" do %>
  <div class="photo">
    <%= image_tag artist.user.avatar_url(:thumb) %>
    <div class="text">
      <h3><%= artist.name %></h3>
      <p class="price"><%= t(:"application.artists.index.price_from") %> <%= artist_price(artist) %></p>
    </div>
    <div class="gradient-overlay"></div>
    <div class="overlay">
      <div class="view-profile"><%= t(:"application.artists.index.view_profile") %></div>
    </div>
  </div>
  <div class="label">
    <div class="genres"><%= artist.genres.map(&:name).join(", ") %></div>
  </div>
  
  <%#= link_to "View Profile", artist_path(artist) %>
<%- end -%>

