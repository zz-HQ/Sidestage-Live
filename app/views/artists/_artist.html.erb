<div class="artist">
  <div class="photo">
    <h3><%= artist.user.name %></h3>
    <%= image_tag artist.user.avatar_url(:thumb) %>
    <div class="city">Berlin</div>
  </div>
  <div class="label">
    <div class="genres"><%= artist.genres.map(&:name).join(", ") %></div>
