<header>
  <div class="row">
    <%# TODO: Change to root_path when splash page goes offline!!! %>
    <h1 id="logo"><%= link_to "Sidestage", artists_path %></h1>

    <div id="city-switch">
      <%= nice_select(select_tag 'current_city', options_for_select(["Berlin", "Toronto"], "Berlin"), include_blank: false) %>
    </div>

    <nav id="main-nav">

      <%- if user_signed_in? -%>
        
        <%= link_to "logout", destroy_user_session_path, method: :delete %>
        <%= link_to "Profile", profile_path %>
        <%= link_to "Conversations", account_conversations_path %>

      <%- else -%>

        <%= link_to "Login", new_user_session_path %>
        <%= link_to "Sign up", new_user_registration_path %>

      <%- end -%>
    </nav>
  </div>

</header>
